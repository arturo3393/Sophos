<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SeeDocsFragment"
    style="@style/styleBackgroundLight"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        style="@style/styleBackgroundLight"
        >

        <TextView
            android:id="@+id/tvSeeDocuments"
            style="@style/styleSendDocsTextColorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/Documents"

            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivSeeDocsImage"
            android:layout_marginTop="8dp"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDocList"
        style="@style/styleBackgroundLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_see_docs"
        android:layout_marginBottom="20dp"
       />


</LinearLayout>