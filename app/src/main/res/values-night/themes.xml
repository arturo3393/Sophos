<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChallengeSophos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/primaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Changes the background of the menu Items -->
        <item name="android:itemBackground">@color/primaryDarkColor</item>
        <item name="popupMenuBackground">@color/primaryDarkColor</item>



    </style>

                                     <!--LOGIN FRAGMENT-->

    <!--Background of the fragment-->
    <style name="styleBackgroundLight">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <!--Tv legend color text-->
    <style name="styleLegendTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Logo Sophos-->
    <style name="styleLogoSophos">
        <item name="android:src">@drawable/sophos_logo_dark</item>
    </style>

    <!--It gives styles to the text view in the login and their IC -->
    <style name="styleLoginTvLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="textFillColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/rounded_borders_night</item>
        <item name="backgroundTint">@color/white</item>
        <item name="startIconTint">@color/primaryDarkColor</item>
        <item name="passwordToggleTint">@color/primaryDarkColor</item>
    </style>

    <!--Btn Ingresar  -->
    <style name="styleLoginBtn1Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_night</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <!--Btn fingerprint and itc IC-->

    <style name="styleLoginBtn2Light" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/ic_fingerprint_light</item>
        <item name="drawableTint">@color/white</item>

    </style>

    <!--TV app can authenticate -->
    <style name="tvAppCanAuthenticateTextColor">
        <item name="android:textColor">@color/white</item>
    </style>



                                             <!--WELCOME FRAGMENT-->


    <!-- TOOLBAR -->

    <style name="styleToolbarIcon">
        <item name="navigationIcon">@drawable/ic_back_arrow_light</item>
    </style>



    <!--Card Send Documents light  -->
    <style name="styleCardSendDocumentsLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">#B3FE1191</item>
        <item name="android:backgroundTint">#B3FE1191</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <!--Image view send docs  -->
    <style name="styleImageViewSendDocs">
        <item name="android:src">@drawable/ic_send_docs_dark</item>
    </style>

    <!--Text view text color send docs  -->
    <style name="styleTextViewTextColorSendDocs">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Btn Ingresar send docs welcome -->
    <style name="styleWelcomeBtn1Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/borders_wel_pink_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#CCFE1191</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>

    <!--Card See Documents light  -->
    <style name="styleCardSeeDocumentsLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">#B34500FF</item>
        <item name="android:backgroundTint">#B34500FF</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <!--Image view IC see docs  -->
    <style name="styleImageViewSeeDocs">
        <item name="android:src">@drawable/ic_see_docs_dark</item>
    </style>

    <!--Text view text color sene docs  -->
    <style name="styleTextViewTextColorSeeDocs">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Btn Ingresar see docs welcome -->
    <style name="styleWelcomeBtn2Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>

    <!--Card Office light  -->
    <style name="styleCardOfficesLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">#B305667C</item>
        <item name="android:backgroundTint">#B305667C</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!--Image view IC offices  -->
    <style name="styleImageViewOffices">
        <item name="android:src">@drawable/ic_office_dark</item>
    </style>

    <!--Text view text color offices  -->
    <style name="styleTextViewTextColorOffices">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Btn Ingresar offices welcome -->
    <style name="styleWelcomeBtn3Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/borders_wel_green_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>


                               <!--SEND DOCS FRAGMENT-->

        <!--It gives styles to the text in send docs-->
    <style name="styleSendDocsTexts" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>


    <!--Tittle send docs text color-->
    <style name="styleSendDocsTextColorTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Image view camera send docs-->
    <style name="styleIVCameraSendDocs">
        <item name="android:src">@drawable/ic_add_a_photo_dark</item>
    </style>

    <!--Spinner style-->
    <style name="styleSpinnersSendDocs">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Btn Document  -->
    <style name="styleSendDocsBtn1Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">#CCFE1191</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/white</item>
    </style>



                        <!--SEE DOCS FRAGMENT-->

    <!--Text color see docs  -->
    <style name="styleSeeDocsTextColor">
        <item name="android:textColor">@color/white</item>
    </style>






</resources>