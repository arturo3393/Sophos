<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--It gives styles to the text view in the login -->
    <style name="styleLoginTvLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/primaryLightColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
    </style>

    <!--Btn Ingresar  -->
    <style name="styleLoginBtn1Light" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Btn fingerprint -->

    <style name="styleLoginBtn2Light" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

</resources>