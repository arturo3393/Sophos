<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--It gives styles to the text in send docs-->
    <style name="styleSendDocsTexts" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!--Tittle send docs text color-->
    <style name="styleSendDocsTextColorTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Image view camera send docs-->
    <style name="styleIVCameraSendDocs">
        <item name="android:src">@drawable/ic_add_a_photo</item>
    </style>

    <!--Spinner style-->
    <style name="styleSpinnersSendDocs">
        <item name="android:textColor">@color/black</item>

    </style>

    <!--Btn Document  -->
    <style name="styleSendDocsBtn1Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>

