<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Card Send Documents light  -->
    <style name="styleCardSendDocumentsLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/sophosPink</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!--Image view Icon send docs  -->
    <style name="styleImageViewSendDocs">
        <item name="android:src">@drawable/ic_send_docs_light</item>
    </style>

    <!--Text view text color send docs  -->
    <style name="styleTextViewTextColorSendDocs">
        <item name="android:textColor">@color/sophosPink</item>
    </style>


    <!--Btn Ingresar send docs welcome -->
    <style name="styleWelcomeBtn1Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/borders_wel_pink_light</item>
        <item name="android:textColor">@color/sophosPink</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/sophosPink</item>
    </style>

    <!--Card See Documents light  -->
    <style name="styleCardSeeDocumentsLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/primaryLightColor</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!--Image view IC see docs  -->
    <style name="styleImageViewSeeDocs">
        <item name="android:src">@drawable/ic_see_docs_light</item>
    </style>

    <!--Text view text color see docs  -->
    <style name="styleTextViewTextColorSeeDocs">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>


    <!--Btn Ingresar see docs welcome -->
    <style name="styleWelcomeBtn2Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_borders_light</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/primaryLightColor</item>
    </style>

    <!--Card Office light  -->
    <style name="styleCardOfficesLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/officesGreen</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!--Image view IC offices  -->
    <style name="styleImageViewOffices">
        <item name="android:src">@drawable/ic_office_light</item>
    </style>

    <!--Text view text color offices  -->
    <style name="styleTextViewTextColorOffices">
        <item name="android:textColor">@color/officesGreen</item>
    </style>


    <!--Btn Ingresar offices welcome -->
    <style name="styleWelcomeBtn3Light" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/borders_wel_green_light</item>
        <item name="android:textColor">@color/officesGreen</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/officesGreen</item>
    </style>
</resources>